  <%= label_tag :email %>
  <%= text_field_tag :email %>

  <%= label_tag :password %>
  <%= password_field_tag :password %>

  <%= label_tag :user_key %>
  <%= text_field_tag :user_key %>

  <%= submit_tag "Login" %>
<% end %>
